<style>
	main {
		min-height: 100vh;
		padding: 0;
		margin: 0;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.hero {
		min-height: 100vh;
		display: flex;
		align-items: center;
		position: relative;
	}

	.hero-content {
		max-width: 800px;
	}

	h1 {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		margin: 0;
		line-height: 1.1;
	}

	.greeting {
		font-size: 1.5rem;
		color: rgb(var(--text));
		opacity: 0.9;
	}

	.name {
		font-size: 4.5rem;
		font-weight: 700;
		background: linear-gradient(to right, rgb(var(--biotech)), rgb(var(--biotech-light)));
		-webkit-background-clip: text;
		color: transparent;
		margin: -0.5rem 0;
	}

	.title {
		font-size: 2.5rem;
		color: rgb(var(--text));
		opacity: 0.7;
	}

	.bio {
		font-size: 1.25rem;
		line-height: 1.6;
		color: rgb(var(--text));
		opacity: 0.8;
		margin: 2rem 0;
		max-width: 600px;
	}

	.cta-group {
		display: flex;
		gap: 1rem;
		margin: 2.5rem 0;
	}

	.cta {
		display: inline-flex;
		align-items: center;
		padding: 0.875rem 1.75rem;
		border-radius: 0.5rem;
		font-weight: 500;
		font-size: 1.125rem;
		transition: all 0.3s ease;
		text-decoration: none;
	}

	.cta.primary {
		background: rgb(var(--biotech));
		color: rgb(var(--background));
	}

	.cta.primary:hover {
		background: rgb(var(--biotech-light));
		transform: translateY(-2px);
	}

	.cta.secondary {
		background: rgba(var(--biotech), 0.1);
		color: rgb(var(--biotech));
	}

	.cta.secondary:hover {
		background: rgba(var(--biotech), 0.2);
		transform: translateY(-2px);
	}

	.social-links {
		display: flex;
		gap: 1rem;
		margin-top: 3rem;
	}

	.social-link {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 2.5rem;
		height: 2.5rem;
		border-radius: 50%;
		background: rgba(var(--text), 0.1);
		color: rgb(var(--text));
		transition: all 0.3s ease;
	}

	.social-link:hover {
		background: rgb(var(--biotech));
		color: rgb(var(--background));
		transform: translateY(-2px);
	}

	.social-link svg {
		width: 1.25rem;
		height: 1.25rem;
	}

	.skills {
		padding: 6rem 0;
		background: rgba(var(--biotech), 0.03);
	}

	.skill-group {
		display: flex;
		gap: 2rem;
		justify-content: center;
	}

	.skill {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
	}

	.skill-icon {
		width: 4rem;
		height: 4rem;
		border-radius: 1rem;
		display: flex;
		align-items: center;
		justify-content: center;
		background: rgba(var(--biotech), 0.1);
		color: rgb(var(--biotech));
	}

	.skill-icon svg {
		width: 2rem;
		height: 2rem;
	}

	.skill span {
		font-weight: 500;
		color: rgb(var(--text));
		opacity: 0.9;
	}

	@media (max-width: 768px) {
		.name {
			font-size: 3rem;
		}

		.title {
			font-size: 2rem;
		}

		.bio {
			font-size: 1.125rem;
		}

		.skill-group {
			flex-direction: column;
			align-items: center;
		}
	}
</style>
